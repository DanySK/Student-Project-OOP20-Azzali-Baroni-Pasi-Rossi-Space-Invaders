<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="menuPane" prefHeight="480.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.view.MenuViewController">
   <children>
      <ImageView fitHeight="490.0" fitWidth="860.0" layoutX="-3.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@BackgroundMenu.jpg" />
         </image>
      </ImageView>
      <VBox layoutX="299.0" layoutY="227.0" prefHeight="249.0" prefWidth="256.0">
         <children>
            <Button fx:id="playButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#playGame" prefHeight="42.0" prefWidth="298.0" text="Play">
               <font>
                  <Font name="Bauhaus 93" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="scoreButton" mnemonicParsing="false" onAction="#openScore" prefHeight="42.0" prefWidth="280.0" text="Score" textAlignment="CENTER">
               <font>
                  <Font name="Bauhaus 93" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="contactsButton" mnemonicParsing="false" onAction="#openContacts" prefHeight="42.0" prefWidth="298.0" text="Contacts" textAlignment="CENTER">
               <font>
                  <Font name="Bauhaus 93" size="22.0" />
               </font>
            </Button>
            <Button fx:id="exitButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#closeGame" prefHeight="42.0" prefWidth="298.0" text="Exit">
               <font>
                  <Font name="Bauhaus 93" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</Pane>
